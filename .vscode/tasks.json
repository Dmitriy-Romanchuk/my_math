{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake -B .build -S . -G 'Ninja'",
            
        },
        {
            "label": "Build CMake",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "ninja -C .build -d explain",
            "dependsOn": [
                "Configure"
            ]
        },
    ]
}